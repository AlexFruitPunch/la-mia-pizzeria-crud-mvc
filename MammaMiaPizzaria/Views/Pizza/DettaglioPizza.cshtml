@model Pizza

<div class="container">
	<div class ="row text-center">
		<div class="col-6">
			<div class="d-flex align-items-center">
				<h1 class="mt-3 mb-3 text-white">Dettagli Pizza</h1>
			</div>
			<div class="position-static-single-image-container">
				<img class="w-100" src="@Model.Immagine"/>
			</div>
			<div class="text-white text-center">
				<strong>Nome Pizza:</strong>
				<p>@Model.Nome</p>
				<strong>Ingredienti:</strong>
				<p>@Model.Ingredienti</p>
			</div>
		</div>
	</div>
</div>
